#!/bin/sh

git_user=rflowers

if [ "$#" -lt 2 ]; then
	echo "Usage: $(basename $0) GITUSER REPO [NUMBER]"
	exit 1
else
	git_user="$1"
	base_repo="$2"
fi

if [ -n "$3" ]; then
	postfix="$3"
fi

repo=$git_user/${base_repo}${postfix}

ssh ece2524git@ece2524.ece.vt.edu fork $base_repo $repo && git clone ece2524git@ece2524.ece.vt.edu:$repo
