#!/bin/bash

testscript="$1"
deadlines="$2"

usage() {
    echo "usage: $(basename $0) SCRIPT FILE"
}

if [ ! -x "$testscript" ]; then
    echo "$testscript: not executable" >&2
    usage >&2
    exit 1
else
    testscript=$(realpath "$testscript")
fi

if [ ! -r "$deadlines" ]; then
    echo "$deadlines: not readable" >&2
    usage >&2
    exit 1
else
    deadlines=$(realpath "$deadlines")
fi 

while read path; do
    while read part; do
	branch=$(echo "$part" | cut -d ' ' -f 1)
	date=$(echo "$part" | cut -d ' ' -f 2-)
	echo "checking out commit no later than $date to $branch"
	switch_to_review_branch "$path" "$date" "$branch"
	pushd . >/dev/null
	cd "$path"
	$testscript
	git add dkm_review/
	git commit -m "tests run on $(date)"
	popd >/dev/null
    done < <( grep -v '^#' "$deadlines")
done