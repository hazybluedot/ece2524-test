#!/usr/bin/env bash

# cd $GITOLITE_ADMIN_DIR

if [ -z "$1" ]; then
    echo "Usage: $(basename $0) PATH" >&2
    exit 1
else
    BASENAME="$1"
fi

while read GITNAME; do
    REPO_DIR=$(echo $BASENAME | sed s/CREATOR/$GITNAME/g)
    REPO_PATH="ece2524git@ece2524.ece.vt.edu:$REPO_DIR"

    pushd $(realpath ".")
    if [ -d "$REPO_DIR" ]; then
	cd $REPO_DIR
	git checkout master 2>/dev/null
	git pull
    else
	git clone "$REPO_PATH" $REPO_DIR 2>/dev/null
	if [ $? -ne 0 ]; then
	    echo "$GITNAME" >&2
	fi
    fi
    popd
done
