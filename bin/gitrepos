#!/usr/bin/env bash

while read gitpath; do
    git_url=`echo $gitpath | cut -d ' ' -f 1`
    git_dir=`echo $gitpath | cut -d ' ' -f 2`
    
    if git clone $git_url $git_dir 2>/tmp/$$_gitrepos.err; then
	echo $git_dir
    elif [ -d $git_dir ]; then
	cd $git_dir
	git checkout master 2>/dev/null
	git pull >&2
	echo $git_dir
    else
	paste <(echo $git_url) /tmp/$$_gitrepos.err >&2
    fi
    rm -f /tmp/$$_gitrepos.err

    continue
    pushd $(realpath ".")
    if [ -d "$REPO_DIR" ]; then
	cd $REPO_DIR
	git checkout master 2>/dev/null
	git pull
    else
	git clone "$REPO_PATH" $REPO_DIR 2>/dev/null
	if [ $? -ne 0 ]; then
	    echo "$GITNAME" >&2
	else 
	    echo $?
	fi
    fi
    popd
done
